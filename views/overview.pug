extends base

block content 
    main.main
        h4.container-sub-heading VIET NAM
            h2.container-heading CHUYẾN DU LỊCH        
                span.text-under-line.text-under-line--green TRONG NƯỚC            
        .card-container 
            each tour in tours
                .card
                    .card__header
                        .card__picture
                            .card__picture-overlay &nbsp;
                            img.card__picture-img(
                                src= `/img/tours/${tour.imageCover}`,
                                alt= `${tour.name}`
                            )
                        h3.heading-tertirary
                            span= tour.name

                    .card__details
                        h4.card__sub-heading= `Tour ${tour.duration} Ngày ${tour.duration-1} Đêm`
                        p.card__text= tour.summary

                        .card__data
                            svg.card__icon
                                use(xlink:href="/img/icons.svg#icon-map-pin")

                            span= tour.startLocation.description
                        .card__data
                            svg.card__icon
                                use(xlink:href="/img/icons.svg#icon-calendar")
                            span= tour.startDates[0].toLocaleString('vi-VN', {month: 'long', year: 'numeric'})

                        .card__data
                            svg.card__icon
                                use(xlink:href="/img/icons.svg#icon-flag")
                            span= `${tour.locations.length} điểm dừng chân`
                        .card__data
                            svg.card__icon
                                use(xlink:href="/img/icons.svg#icon-user")
                            span= `${tour.maxGroupSize} người`
                    .card__footer
                        p
                            span.card__footer-value= `${tour.price} Triệu VNĐ` 
                            | 
                            span.card__footer-text mỗi người
                        p.card__ratings
                            span.card__footer-value= tour.ratingsAverage
                            | 
                            span.card__footer-text= `đánh giá (${tour.ratingsQuantity})`
                        </p>
                        a.btn.btn--green.btn--small(href=`/tour/${tour.slug}`) Chi tiết

        .app-container
            .banner.s-banner-full
                .banner-half(style="background-image: url('./img/tours/banner-1.jpg')")
                    h5.banner-half__sub-heading 01. ỒN ÀO, NÁO NHIỆT
                    h2.banner-half__heading Khám phá các thành phố
                    a.banner-half__btn.banner-half__btn--yellow(href="") CHI TIẾT
                .banner-half(style="background-image: url('./img/tours/banner-2.jpg')")
                    h5.banner-half__sub-heading  01. YÊN BÌNH, TĨNH LẶNG
                    h2.banner-half__heading Khám phá thiên nhiên
                    a.banner-half__btn.banner-half__btn--green(href="") CHI TIẾT                   

